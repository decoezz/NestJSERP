generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Employee {
  firstname String
  lastname  String
  role      Role   @default(Employee)
  email     String @unique
  User      User?
  active    Boolean @default(true)
  tasks Task[]
  @@id(name: "Employee", fields: [firstname, lastname])
}

model Task{
  id Int @id@default(autoincrement())
  title String
  description String?
  deadline DateTime
  status TaskStatus @default(Pending)
  assignedTo Employee @relation(fields: [assignedToFirstname,assignedToLastname],references: [firstname,lastname])
  assignedToFirstname String
  assignedToLastname String
  assignedByFirstname String
  assignedByLastname String
  assignedByRole Role
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  @@unique([assignedToFirstname, assignedToLastname, title],map:"EmployeeTaskData") // Prevent duplicate tasks for the same employee
}

model User {
  userid            Int      @id @default(autoincrement())
  username          String   @unique
  password          String
  employee          Employee @relation(fields: [employeeFirstname, employeeLastname], references: [firstname, lastname])
  employeeFirstname String
  employeeLastname  String
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt 
  @@unique([employeeFirstname, employeeLastname])
}

model Product {
  brand            Brand
  modelnumber      String  @unique
  coolingCapacity  Int
  powerConsumption Int
  price            Int
  inventoryStock   Int
  StoreStock       Int
  inStore          Boolean @default(false)
  photo            String? @default("doesn't exist")
  unitSold         Int     @default(0)

  @@map("Product")
}

enum Role {
  Employee
  Inventory_Manager
  Store_Manager
}

enum Brand {
  Fresh
  Unionaire
  Sharp
  Carrier
  LG
}

enum TaskStatus {
  Pending
  Completed
}